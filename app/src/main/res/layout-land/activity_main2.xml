<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/ic_fondo"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_perf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="301dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="111dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ad" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_below="@+id/logo"
                />

            <TextView
                android:id="@+id/ocupacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre"
                android:layout_marginTop="-31dp"
                android:text="@string/main_nombres_y_apellidos"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/ocupacion"
                android:src="@drawable/ic_codigo" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>